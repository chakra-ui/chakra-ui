{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "build/lib",
    "rootDirs": ["packages"],
    "typeRoots": ["./node_modules/@types", "./packages/**/*/@types"]
  },
  "include": ["packages/**/*", "next-env.d.ts"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
