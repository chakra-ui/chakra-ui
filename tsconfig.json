{
  "compilerOptions": {
    "outDir": "build/lib",
    "module": "esnext",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom", "esnext"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "rootDirs": ["packages"],
    "skipLibCheck": true,
    "baseUrl": "packages",
    "forceConsistentCasingInFileNames": true,
    // "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    // "strictNullChecks": true,
    // "suppressImplicitAnyIndexErrors": true,
    // "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types",
      "packages/**/*/@types"
    ]
  },
  "include": ["packages/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
