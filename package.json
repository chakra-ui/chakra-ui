{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "clean": "lerna clean --yes",
    "bootstrap": "yarn clean && lerna bootstrap --use-workspaces",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook",
    "docs": "yarn workspace @chakra-ui/docs dev",
    "docs:now": "cd packages/chakra-ui-docs && now",
    "build": "yarn workspace @chakra-ui/core build",
    "test": "yarn workspace @chakra-ui/core test",
    "core:add": "yarn workspace @chakra-ui/core add",
    "link:all": "npx lerna link",
    "icon:build": "yarn workspace @chakra-ui/icons build && yarn link:all",
    "hooks:build": "yarn workspace @chakra-ui/hooks build && yarn link:all",
    "theme:build": "yarn workspace @chakra-ui/theme build && yarn link:all",
    "utils:build": "yarn workspace @chakra-ui/utils build && yarn link:all",
    "layout:build": "yarn workspace @chakra-ui/layout build && yarn link:all",
    "system:build": "yarn workspace @chakra-ui/system build && yarn link:all",
    "release": "lerna publish"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn workspace @chakra-ui/core lint --fix ",
      "pre-push": "yarn test"
    }
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@emotion/core": "10.0.10",
    "@emotion/styled": "10.0.11",
    "@storybook/addon-actions": "^5.2.1",
    "@storybook/addon-docs": "^5.2.1",
    "@storybook/addon-knobs": "5.2.1",
    "@storybook/addon-links": "^5.2.1",
    "@storybook/addons": "^5.2.1",
    "@storybook/react": "^5.2.1",
    "@types/jest": "24.0.19",
    "@typescript-eslint/eslint-plugin": "1.x",
    "@typescript-eslint/parser": "1.x",
    "all-contributors-cli": "6.8.2",
    "awesome-typescript-loader": "5.2.1",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "emotion-theming": "10.0.10",
    "eslint-plugin-react-hooks": "2.3.0",
    "lerna": "^3.15.0",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2",
    "pretty-num": "0.3.0",
    "react": "^16.8.6",
    "react-docgen-typescript-loader": "3.3.0",
    "react-dom": "^16.8.6",
    "react-lorem-component": "^0.13.0",
    "react-transition-group": "4.3.0"
  }
}
