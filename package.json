{
  "name": "chakra-ui",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*",
      "tooling/*",
      "website"
    ],
    "nohoist": [
      "@emotion/core/types",
      "**/@emotion/core/types",
      "**/@types/theme-ui",
      "**/@types/theme-ui/**",
      "**/@types/theme-ui__components"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*",
      "tooling/cli"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git"
  },
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "license": "MIT",
  "scripts": {
    "pkg": "manypkg run",
    "check:pkgs": "manypkg check",
    "fix:pkgs": "manypkg fix",
    "version:pkgs": "changeset version",
    "clean:emotion-types": "rimraf node_modules/@emotion/core/types",
    "postinstall": "yarn clean:emotion-types && yarn check:pkgs",
    "csb:pkgs": "node -r esm scripts/csb.js",
    "csb:install": "yarn prestart && yarn csb:pkgs",
    "contributors:add": "all-contributors add",
    "contributors:gen": "all-contributors generate",
    "prestart": "yarn && yarn bootstrap",
    "boot": "yarn prestart && yarn build",
    "start": "yarn prebuild && yarn storybook",
    "start:all": "yarn build && concurrently \"yarn docs dev\"  \"yarn storybook\" ",
    "prop:table": "yarn pkg props-docs build",
    "build:babel": "yarn pkg babel-plugin build",
    "prebuild": "yarn build:babel",
    "build": "preconstruct build",
    "build:templates": "ts-node -T scripts/build-templates.ts",
    "test": "jest --maxWorkers=50%",
    "test:ci": "jest --runInBand",
    "lint": "lerna run lint --no-private --stream",
    "lint:types": "lerna run lint:types --no-private --stream",
    "prestorybook": "rimraf node_modules/.cache/storybook && yarn pkg babel-plugin build",
    "storybook": "start-storybook -p 6006",
    "clean": "lerna clean --yes && rimraf node_modules",
    "clean-dist": "yarn lerna exec -- rimraf dist",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "commit": "git-cz",
    "build:storybook": "build-storybook && sb extract",
    "members:gen": "ts-node scripts/all-members.ts",
    "avatars:gen": "ts-node scripts/avatars.ts",
    "search-meta:gen": "ts-node scripts/get-search-meta.ts",
    "changelog:gen": "ts-node scripts/changelog-generate.ts",
    "changelog:write": "ts-node scripts/changelog-write.ts",
    "discord": "ts-node scripts/discord.ts",
    "create:pkg": "ts-node scripts/plopfile.ts",
    "release": "changeset publish",
    "notify:release": "yarn changelog:write && yarn discord && yarn commit:changelog",
    "commit:changelog": "git add .CHANGELOG.md && git commit -am 'docs: add changelog' && git push",
    "docs": "yarn workspace @chakra-ui/docs",
    "docs:deploy": "yarn build && yarn docs:build && cp -r website/public .",
    "docs:build": "yarn search-meta:gen && yarn docs build",
    "docs:dev": "yarn docs dev",
    "docs:start": "yarn docs start",
    "dedup": "yarn-deduplicate --strategy highest yarn.lock"
  },
  "resolutions": {
    "**/react": "17.0.1",
    "**/react-dom": "17.0.1",
    "@popperjs/core": "2.4.4"
  },
  "version": "1.0.0",
  "dependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/runtime": "^7.16.0",
    "@changesets/changelog-github": "0.4.1",
    "@changesets/cli": "2.17.0",
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@emotion/jest": "^11.5.0",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@jest/types": "27.2.5",
    "@manypkg/cli": "0.19.0",
    "@preconstruct/cli": "^2.1.5",
    "@storybook/addon-a11y": "~6.3.12",
    "@storybook/addon-actions": "~6.3.12",
    "@storybook/addon-knobs": "~6.3.1",
    "@storybook/addon-toolbars": "~6.3.12",
    "@storybook/cli": "~6.3.12",
    "@storybook/react": "~6.3.12",
    "@swc-node/jest": "^1.3.5",
    "@types/imagemin": "7.0.0",
