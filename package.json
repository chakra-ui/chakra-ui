{
  "name": "chakra-ui",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git"
  },
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "clean:emotion-types": "rimraf node_modules/@emotion/core/types",
    "postinstall": "pnpm clean:emotion-types",
    "build:tokens": "chakra-cli tokens packages/react/src/preset.ts",
    "build:prop-docs": "pnpm typedocs && pnpm --filter=*props-docs build",
    "build": "pnpm --filter=./packages/* build",
    "build:fast": "pnpm --filter=./packages/* build:fast",
    "dev": "pnpm --filter=./packages/* dev",
    "postbuild": "pnpm build:tokens",
    "typedocs": "tsx scripts/typedocs.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "react": "pnpm --filter=@chakra-ui/react",
    "utils": "pnpm --filter=@chakra-ui/utils",
    "hooks": "pnpm --filter=@chakra-ui/hooks",
    "website": "pnpm --filter=./website",
    "lint": "eslint packages --ext .ts,.tsx --config .eslintrc --cache",
    "format:check": "prettier --check packages --cache",
    "format:write": "prettier --write packages --cache",
    "clean:storybook": "rm -rf node_modules/.cache/storybook",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "pnpm build:fast && storybook build",
    "serve:storybook": "pnpx serve storybook-static",
    "clean": "pnpm -r --parallel exec rimraf dist *.log",
    "slack": "tsx scripts/slack.ts",
    "version": "changeset version",
    "release": "changeset publish",
    "version:dev": "changeset version --snapshot dev",
    "release:dev": "changeset publish --tag dev"
  },
  "version": "2.0.0",
  "dependencies": {
    "@babel/core": "^7.22.10",
    "@babel/eslint-parser": "^7.22.10",
    "@chakra-ui/cli": "workspace:*",
    "@chakra-ui/test-utils": "workspace:*",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@changesets/get-release-plan": "3.0.17",
    "@changesets/types": "5.2.1",
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@octokit/rest": "^20.0.1",
    "@rollup/plugin-alias": "5.1.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-replace": "5.0.5",
    "@storybook/addon-a11y": "^7.6.17",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-themes": "^7.6.17",
    "@storybook/addons": "^7.6.17",
    "@storybook/cli": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/react-vite": "^7.6.17",
    "@storybook/theming": "^7.6.17",
    "@testing-library/jest-dom": "^6.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/edit-json-file": "^1.7.0",
    "@types/execa": "2.0.0",
    "@types/fs-extra": "11.0.4",
    "@types/mkdirp": "1.0.2",
    "@types/node": "^20.5.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/testing-library__jest-dom": "5.14.9",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "cross-env": "7.0.3",
    "dotenv": "16.3.1",
    "edit-json-file": "1.7.0",
    "eslint": "8.56.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-react": "1.1.7",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-testing-library": "6.2.0",
    "execa": "8.0.1",
    "fast-glob": "^3.3.2",
    "find-packages": "10.0.4",
    "find-up": "^6.3.0",
    "fs-extra": "11.2.0",
    "husky": "^8.0.3",
    "lint-staged": "14.0.1",
    "node-fetch": "3.3.2",
    "npm-run-all": "^4.1.5",
    "outdent": "^0.8.0",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "5.0.1",
    "rollup": "^4.4.1",
    "rollup-plugin-banner2": "^1.2.2",
    "rollup-plugin-esbuild": "^6.1.0",
    "storybook": "^7.3.2",
    "tsup": "^8.0.2",
    "tsx": "^4.0.0",
    "typescript": "^5.1.6",
    "vite": "^4.5.2",
    "vitest": "^1.0.2",
    "vitest-axe": "^0.1.0",
    "vitest-matchmedia-mock": "^1.0.2"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0"
    }
  },
  "engines": {
    "node": ">=18.x"
  }
}
