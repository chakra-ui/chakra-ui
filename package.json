    "husky": "4.2.5",
    "inquirer": "7.3.2",
    "jest": "26.1.0",
    "jest-emotion": "10.0.32",
    "lerna": "3.22.1",
    "lint-staged": "10.2.11",
    "listr": "0.14.3",
    "ncp": "2.0.0",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-icons": "3.10.0",
    "react-lorem-component": "^0.13.0",
    "react-router-dom": "5.2.0",
    "react-spinners": "0.8.3",
    "react-test-renderer": "16.13.1",
    "rimraf": "3.0.2",
    "shelljs": "0.8.4",
    "ts-jest": "26.1.3",
    "typescript": "3.9.7"
  }
}
