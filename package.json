    "commitizen": "4.2.4",
    "concurrently": "6.3.0",
    "cross-env": "7.0.3",
    "csstype": "^3.0.9",
    "cz-conventional-changelog": "3.3.0",
    "discord.js": "^12.5.3",
    "dotenv-cli": "4.0.0",
    "edit-json-file": "1.5.0",
    "eslint": "7.17.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-config-react": "1.1.7",
    "eslint-plugin-import": "2.22.1",
