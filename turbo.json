{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", "node_modules/.cache/.tsbuildinfo"],
      "dependsOn": ["^build"]
    },
    "build:fast": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build:fast"]
    },
    "dev": {
      "cache": false
    },
    "typecheck": {
      "outputs": ["node_modules/.cache/.tsbuildinfo"],
      "dependsOn": ["^typecheck"]
    }
  },
  "globalDependencies": ["tsconfig.json"]
}
