{
  "name": "@chakra-ui/cli",
  "version": "1.4.0",
  "description": "Generate theme typings for autocomplete",
  "keywords": [
    "theme",
    "theming",
    "ui mode",
    "ui"
  ],
  "author": "Tim Kolberger <tim@kolberger.eu>",
  "homepage": "https://github.com/chakra-ui/chakra-ui#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/chakra-ui/issues"
  },
  "bin": {
    "chakra-cli": "bin/index.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "nodemon --watch src --exec 'yarn build; yarn dev' -e ts,tsx",
    "dev": "node bin/index.js tokens ../../website/theme.ts",
    "build": "concurrently yarn:build:*",
    "test": "jest --env=jsdom --passWithNoTests",
    "lint": "concurrently yarn:lint:*",
    "version": "yarn build",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --root-mode upward --extensions .ts,.tsx -d dist --source-maps",
    "test:cov": "yarn test --coverage",
    "lint:src": "eslint src --ext .ts,.tsx --config ../../.eslintrc",
    "lint:types": "tsc --noEmit"
  },
  "dependencies": {
    "@chakra-ui/utils": "^1.8.0",
    "cli-check-node": "^1.3.4",
    "cli-handle-unhandled": "^1.1.1",
    "cli-welcome": "^2.2.2",
    "commander": "^6.2.1",
    "ora": "^5.3.0",
    "regenerator-runtime": "^0.13.7",
    "ts-node": "9.1.1",
    "update-notifier": "^5.0.1"
  },
  "devDependencies": {
    "@types/ora": "^3.2.0",
    "@types/update-notifier": "5.0.0"
  }
}
