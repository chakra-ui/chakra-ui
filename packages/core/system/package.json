{
  "name": "@chakra-ui/system",
  "version": "2.4.0",
  "description": "Chakra UI system primitives",
  "keywords": [
    "system",
    "styled-component",
    "emotion",
    "ui-component",
    "ui",
    "chakra",
    "style-props",
    "design-system"
  ],
  "sideEffects": false,
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "homepage": "https://github.com/chakra-ui/chakra-ui#readme",
  "license": "MIT",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git",
    "directory": "packages/components/system"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/chakra-ui/issues"
  },
  "dependencies": {
    "@chakra-ui/color-mode": "workspace:*",
    "@chakra-ui/object-utils": "workspace:*",
    "@chakra-ui/react-utils": "workspace:*",
    "@chakra-ui/theme-utils": "workspace:*",
    "@chakra-ui/styled-system": "workspace:*",
    "@chakra-ui/utils": "workspace:*",
    "react-fast-compare": "3.2.0"
  },
  "peerDependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "react": ">=18"
  },
  "devDependencies": {
    "@chakra-ui/theme": "workspace:*",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "framer-motion": "^6.2.9",
    "react": "^18.0.0",
    "clean-package": "2.1.1"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "clean-package": "../../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
