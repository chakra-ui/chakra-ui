{
  "name": "@chakra-ui/theme-utils",
  "version": "2.0.21",
  "description": "",
  "keywords": [
    "theme",
    "utilities",
    "chakra"
  ],
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "homepage": "https://github.com/chakra-ui/chakra-ui#readme",
  "license": "MIT",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": {
        "types": "./dist/types/index.d.mts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./extend-theme": {
      "source": "./src/extend-theme.ts",
      "import": {
        "types": "./dist/types/extend-theme.d.mts",
        "default": "./dist/esm/extend-theme.mjs"
      },
      "require": {
        "types": "./dist/types/extend-theme.d.ts",
        "default": "./dist/cjs/extend-theme.cjs"
      }
    },
    "./theme-extensions": {
      "source": "./src/theme-extensions/index.ts",
      "import": {
        "types": "./dist/types/theme-extensions/index.d.mts",
        "default": "./dist/esm/theme-extensions/index.mjs"
      },
      "require": {
        "types": "./dist/types/theme-extensions/index.d.ts",
        "default": "./dist/cjs/theme-extensions/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git",
    "directory": "packages/utilities/theme-utils"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/chakra-ui/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "pnpm build:fast --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src"
  },
  "devDependencies": {
    "@types/lodash.mergewith": "4.6.8"
  },
  "dependencies": {
    "@chakra-ui/shared-utils": "workspace:*",
    "@chakra-ui/styled-system": "workspace:*",
    "@chakra-ui/theme": "workspace:*",
    "lodash.mergewith": "4.6.2"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  },
  "main": "dist/cjs/index.cjs"
}
