{
  "name": "@chakra-ui/color-mode",
  "version": "2.2.0",
  "description": "React component and hooks for handling light and dark mode.",
  "keywords": [
    "react",
    "theming",
    "ui",
    "light mode",
    "use dark mode",
    "dark mode",
    "color mode",
    "hook",
    "color scheme",
    "media query",
    "chakra ui"
  ],
  "sideEffects": false,
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "homepage": "https://github.com/chakra-ui/chakra-ui#readme",
  "license": "MIT",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src --dts",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src",
    "typedocs": "tsx ../../../scripts/generate-type-docs.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git",
    "directory": "packages/components/color-mode"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/chakra-ui/issues"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@chakra-ui/utils": "workspace:*",
    "react": "^18.2.0"
  },
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": {
        "types": "./dist/types/index.d.mts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./color-mode-context": {
      "source": "./src/color-mode-context.ts",
      "import": {
        "types": "./dist/types/color-mode-context.d.mts",
        "default": "./dist/esm/color-mode-context.mjs"
      },
      "require": {
        "types": "./dist/types/color-mode-context.d.ts",
        "default": "./dist/cjs/color-mode-context.cjs"
      }
    },
    "./color-mode-provider": {
      "source": "./src/color-mode-provider.tsx",
      "import": {
        "types": "./dist/types/color-mode-provider.d.mts",
        "default": "./dist/esm/color-mode-provider.mjs"
      },
      "require": {
        "types": "./dist/types/color-mode-provider.d.ts",
        "default": "./dist/cjs/color-mode-provider.cjs"
      }
    },
    "./color-mode-script": {
      "source": "./src/color-mode-script.tsx",
      "import": {
        "types": "./dist/types/color-mode-script.d.mts",
        "default": "./dist/esm/color-mode-script.mjs"
      },
      "require": {
        "types": "./dist/types/color-mode-script.d.ts",
        "default": "./dist/cjs/color-mode-script.cjs"
      }
    },
    "./color-mode-types": {
      "source": "./src/color-mode-types.ts",
      "import": {
        "types": "./dist/types/color-mode-types.d.mts",
        "default": "./dist/esm/color-mode-types.mjs"
      },
      "require": {
        "types": "./dist/types/color-mode-types.d.ts",
        "default": "./dist/cjs/color-mode-types.cjs"
      }
    },
    "./storage-manager": {
      "source": "./src/storage-manager.ts",
      "import": {
        "types": "./dist/types/storage-manager.d.mts",
        "default": "./dist/esm/storage-manager.mjs"
      },
      "require": {
        "types": "./dist/types/storage-manager.d.ts",
        "default": "./dist/cjs/storage-manager.cjs"
      }
    },
    "./package.json": "./package.json"
  }
}
