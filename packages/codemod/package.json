{
  "name": "@chakra-ui/codemod",
  "version": "3.33.0",
  "description": "Codemods for migrating and transforming Chakra UI codebases across versions.",
  "type": "module",
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "license": "MIT",
  "homepage": "https://chakra-ui.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/chakra-ui/chakra-ui",
    "directory": "packages/codemod"
  },
  "keywords": [
    "chakra-ui",
    "chakra",
    "codemod",
    "jscodeshift",
    "migration",
    "refactor",
    "react",
    "ui",
    "design-system"
  ],
  "bin": {
    "chakra-codemod": "bin/index.js"
  },
  "scripts": {
    "prepack": "tsx ../../scripts/conditions.ts",
    "postpack": "tsx ../../scripts/conditions.ts --restore",
    "clean": "rimraf dist .turbo",
    "build:fast": "tsx ../../scripts/build/main.ts",
    "build": "tsx ../../scripts/build/main.ts --dts",
    "dev": "pnpm build:fast --watch",
    "typecheck": " tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@clack/prompts": "0.11.0",
    "@emotion/is-prop-valid": "^1.4.0",
    "@types/node": "^24.0.0",
    "commander": "14.0.3",
    "html-element-attributes": "3.5.0",
    "is-git-clean": "1.1.0",
    "jscodeshift": "17.3.0",
    "picocolors": "1.1.1",
    "prompts": "2.4.2",
    "semver": "7.7.4"
  },
  "devDependencies": {
    "@chakra-ui/react": "workspace:*",
    "@types/jscodeshift": "^17.3.0",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.7.1"
  },
  "peerDependencies": {
    "@chakra-ui/react": ">=3"
  },
  "exports": {
    ".": {
      "dev": "./src/index.ts",
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18"
  }
}
