{
  "name": "@chakra-ui/system",
  "version": "1.0.0",
  "description": "Chakra UI system primitives",
  "keywords": [
    "system",
    "styled-component",
    "emotion",
    "ui-component",
    "ui",
    "chakra",
    "style-props",
    "styled-system",
    "design-system"
  ],
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "homepage": "https://github.com/chakra-ui/chakra-ui#readme",
  "license": "MIT",
  "main": "dist/cjs",
  "module": "dist/esm",
  "types": "dist/types",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/chakra-ui/issues"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "nodemon --exec yarn build -e ts,tsx --ignore dist/ --ignore src/tests/ --ignore \"*.stories.tsx\"",
    "build": "concurrently yarn:build:*",
    "test": "jest --env=jsdom --passWithNoTests",
    "lint": "concurrently yarn:lint:*",
    "version": "yarn build",
    "build:esm": "tsc --module esnext --outDir dist/esm --declaration false",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs --declaration false",
    "build:types": "tsc --emitDeclarationOnly --declaration true --declarationDir dist/types",
    "test:cov": "yarn test --coverage",
    "lint:src": "eslint src --ext .ts,.tsx --config ../../.eslintrc",
    "lint:types": "tsc --noEmit"
  },
  "devDependencies": {
    "framer-motion": "1.10.0"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "0.8.8",
    "@emotion/core": "10.0.28",
    "hoist-non-react-statics": "3.3.2",
    "@types/hoist-non-react-statics": "3.3.1",
    "@chakra-ui/color-mode": "1.0.0",
    "@chakra-ui/utils": "1.0.0",
    "@chakra-ui/css": "1.0.0",
    "@chakra-ui/parser": "1.0.0"
  },
  "peerDependencies": {
    "react": "16.x"
  }
}
