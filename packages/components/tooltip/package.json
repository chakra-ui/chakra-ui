{
  "name": "@chakra-ui/tooltip",
  "version": "2.2.6",
  "description": "A React Component for rendering dynamically positioned Tooltips",
  "sideEffects": false,
  "keywords": [
    "react",
    "tooltip",
    "component",
    "popper",
    "chakra ui",
    "toggletip",
    "react popper"
  ],
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "homepage": "https://github.com/chakra-ui/chakra-ui#readme",
  "license": "MIT",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git",
    "directory": "packages/components/tooltip"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/chakra-ui/issues"
  },
  "dependencies": {
    "@chakra-ui/popper": "workspace:*",
    "@chakra-ui/react-use-merge-refs": "workspace:*",
    "@chakra-ui/react-use-disclosure": "workspace:*",
    "@chakra-ui/react-use-event-listener": "workspace:*",
    "@chakra-ui/react-types": "workspace:*",
    "@chakra-ui/portal": "workspace:*",
    "@chakra-ui/shared-utils": "workspace:*"
  },
  "devDependencies": {
    "@chakra-ui/button": "workspace:*",
    "@chakra-ui/object-utils": "workspace:*",
    "@chakra-ui/hooks": "workspace:*",
    "@chakra-ui/system": "workspace:*",
    "@chakra-ui/modal": "workspace:*",
    "framer-motion": "^6.2.9",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "clean-package": "2.1.1"
  },
  "peerDependencies": {
    "@chakra-ui/system": ">=2.0.0",
    "framer-motion": ">=4.0.0",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "typedocs": "tsx ../../../scripts/generate-type-docs.ts"
  },
  "clean-package": "../../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
