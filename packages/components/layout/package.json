{
  "name": "@chakra-ui/layout",
  "version": "2.1.15",
  "description": "Chakra UI layout components that give you massive speed",
  "keywords": [
    "layout",
    "component",
    "grid",
    "stack",
    "wrap",
    "box",
    "aspect ratio",
    "ui",
    "badge",
    "react",
    "primitives",
    "chakra ui"
  ],
  "sideEffects": false,
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "homepage": "https://github.com/chakra-ui/chakra-ui#readme",
  "license": "MIT",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git",
    "directory": "packages/components/layout"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/chakra-ui/issues"
  },
  "dependencies": {
    "@chakra-ui/icon": "workspace:*",
    "@chakra-ui/react-context": "workspace:*",
    "@chakra-ui/react-children-utils": "workspace:*",
    "@chakra-ui/shared-utils": "workspace:*",
    "@chakra-ui/object-utils": "workspace:*",
    "@chakra-ui/breakpoint-utils": "workspace:*"
  },
  "devDependencies": {
    "@chakra-ui/system": "workspace:*",
    "react-icons": "^4.2.0",
    "react-router-dom": "6.0.0",
    "react": "^18.0.0",
    "clean-package": "2.1.1"
  },
  "peerDependencies": {
    "@chakra-ui/system": ">=2.0.0",
    "react": ">=18"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "typedocs": "tsx ../../../scripts/generate-type-docs.ts"
  },
  "clean-package": "../../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
