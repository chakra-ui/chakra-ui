{
  "name": "@chakra-ui/avatar",
  "version": "2.2.4",
  "description": "A React component used to show users avatar or initials",
  "keywords": [
    "component",
    "react",
    "chakra-ui",
    "react-component",
    "avatar",
    "profile-image",
    "photo",
    "initials"
  ],
  "sideEffects": false,
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "homepage": "https://github.com/chakra-ui/chakra-ui#readme",
  "license": "MIT",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git",
    "directory": "packages/components/avatar"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/chakra-ui/issues"
  },
  "dependencies": {
    "@chakra-ui/image": "workspace:*",
    "@chakra-ui/shared-utils": "workspace:*",
    "@chakra-ui/react-context": "workspace:*",
    "@chakra-ui/react-children-utils": "workspace:*"
  },
  "devDependencies": {
    "@chakra-ui/object-utils": "workspace:*",
    "@chakra-ui/system": "workspace:*",
    "@chakra-ui/layout": "workspace:*",
    "react": "^18.0.0",
    "clean-package": "2.1.1"
  },
  "peerDependencies": {
    "@chakra-ui/system": ">=2.0.0",
    "react": ">=18"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "typedocs": "tsx ../../../scripts/generate-type-docs.ts"
  },
  "clean-package": "../../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
