{
  "extends": "../../tsconfig-base.json",
  "include": ["src", "types", "@types"],
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "**/*.test.ts", "**/*.test.tsx"],
  "compilerOptions": {
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "rootDir": "./",
    "typeRoots": ["./@types", "../../node_modules/@types"]
  }
}
