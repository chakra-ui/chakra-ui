{
  "name": "@chakra-ui/drawer",
  "version": "1.0.0",
  "description": "React component the renders a Drawer from the edges of the screen",
  "keywords": [
    "drawer",
    "modal",
    "dialog",
    "modal dialog",
    "slide",
    "transition",
    "accessible",
    "a11y",
    "react",
    "chakra-ui"
  ],
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "homepage": "https://github.com/chakra-ui/chakra-ui#readme",
  "license": "MIT",
  "main": "dist/cjs",
  "module": "dist/esm",
  "types": "dist/types",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/chakra-ui/issues"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "nodemon --exec yarn build -e ts,tsx --ignore dist/ --ignore src/tests/ --ignore \"*.stories.tsx\"",
    "build": "concurrently yarn:build:*",
    "test": "jest --env=jsdom --passWithNoTests",
    "lint": "concurrently yarn:lint:*",
    "version": "yarn build",
    "build:esm": "BABEL_ENV=esm babel src --root-mode upward --extensions .ts,.tsx -d dist/esm --source-maps",
    "build:cjs": "BABEL_ENV=cjs babel src --root-mode upward --extensions .ts,.tsx -d dist/cjs --source-maps",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap --declarationDir dist/types",
    "test:cov": "yarn test --coverage",
    "lint:src": "eslint src --ext .ts,.tsx --config ../../.eslintrc",
    "lint:types": "tsc --noEmit"
  },
  "dependencies": {
    "tslib": "1.11.1",
    "@chakra-ui/modal": "1.0.0",
    "@chakra-ui/transition": "1.0.0"
  },
  "devDependencies": {
    "@chakra-ui/system": "1.0.0"
  },
  "peerDependencies": {
    "@chakra-ui/system": "1.0.0",
    "react": "16.x",
    "react-dom": "16.x"
  }
}
