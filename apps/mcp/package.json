{
  "name": "@chakra-ui/react-mcp",
  "description": "The official MCP server for Chakra UI",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsup src/server.ts --format esm && chmod 755 dist/server.js",
    "dev": "tsup src/server.ts --format esm --watch",
    "inspect": "node scripts/inspect.js"
  },
  "bin": {
    "chakra-mcp": "./dist/server.js"
  },
  "keywords": [
    "chakra-ui",
    "mcp-server",
    "chat",
    "chatgpt",
    "mcp"
  ],
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "@chakra-ui/react": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.15.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/fs-extra": "^11.0.4",
    "tsup": "^8.5.0",
    "typescript": "5.8.3"
  }
}
