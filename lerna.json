{
  "packages": ["packages/*", "website", "tooling/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "registry": "https://registry.npmjs.org/",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/stories/**", "**/__tests__/**"]
    }
  }
}
